<style>
  h1 {
    padding-top: {{ section.settings.padding_top }}rem;
    font-size: {{ section.settings.heading_font }}px;
    margin-bottom: 0.5rem; /* Reduce bottom space */
  }

  p {
    margin: 0; /* Remove extra margins */
    line-height: 1.2; /* Reduce spacing between lines */
  }

  #countdown-timer {
    font-size: 18px; /* Adjust font size */
    padding: 5px 10px; /* Adjust padding */
    background: #ffcc00; /* Background color */
    display: inline-block;
    border-radius: 5px;
  }
</style>

<body>
  <h1 style="text-align: {{ section.settings.heading_alignment }};">
    {{ section.settings.heading_text }}
  </h1>
  <p>{{ section.settings.paragraph_text }}</p>
  
  <p id="countdown-timer"></p> <!-- Countdown Timer -->

  {% if section.settings.size >= 9 %}
    <p>Overflow</p>
  {% endif %}
</body>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let countdownTime = 20 * 60; // 20 minutes in seconds
    function updateCountdown() {
      let minutes = Math.floor(countdownTime / 60);
      let seconds = countdownTime % 60;
      document.getElementById("countdown-timer").textContent = 
        minutes + "m " + (seconds < 10 ? "0" : "") + seconds + "s";
      countdownTime--;

      if (countdownTime >= 0) {
        setTimeout(updateCountdown, 1000);
      } else {
        document.getElementById("countdown-timer").textContent = "Time's Up!";
      }
    }
    updateCountdown();
  });
</script>
