<style>
  h1 {
    font-size: {{ section.settings.heading_font }}px;
    margin-bottom: 0.5rem;
  }

  p {
    margin: 0;
    line-height: 1.2;
  }

  #countdown-timer {
    width: 100%; /* Full width */
    height: 30px; /* Fixed height */
    font-size: 18px;
    padding: 5px 0; /* Adjust padding for better alignment */
    background: #ffcc00; /* Yellow background */
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 5px;
    font-weight: bold;
  }
</style>

<body>
  <h1 style="text-align: {{ section.settings.heading_alignment }};">
    {{ section.settings.heading_text }}
  </h1>
  <p>{{ section.settings.paragraph_text }}</p>
  
  <div id="countdown-timer"></div> <!-- Countdown Timer -->

  {% if section.settings.size >= 9 %}
    <p>Overflow</p>
  {% endif %}
</body>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let countdownTime = 20 * 60; // 20 minutes in seconds
    function updateCountdown() {
      let minutes = Math.floor(countdownTime / 60);
      let seconds = countdownTime % 60;
      document.getElementById("countdown-timer").textContent = 
        minutes + "m " + (seconds < 10 ? "0" : "") + seconds + "s";
      countdownTime--;

      if (countdownTime >= 0) {
        setTimeout(updateCountdown, 1000);
      } else {
        document.getElementById("countdown-timer").textContent = "Time's Up!";
      }
    }
    updateCountdown();
  });
</script>
