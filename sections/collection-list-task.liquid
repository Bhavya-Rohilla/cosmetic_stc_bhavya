<style>
    h1{
    padding-top: 40px;
    text-align: center;
    font-size: 22px;
}
    .main-container{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding: 20px;
    gap: 20px;
}




.box{
    background: red;
    height: 400px;
    width: 300px;
}
.box img {
    width: 100%;
    height: 100%;
}

.secondary-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 20px;
}
.secondary-container:first-child .box{
    border-top-left-radius: 80px;
    overflow: hidden;
}

.secondary-container:last-child .box{
    border-bottom-right-radius: 80px;
    overflow: hidden;
}
</style>


<h1>GET STARTED</h1>
<div class="main-container">
    {% for block in section.blocks %}
<div class="secondary-container">
    <div class="box">
        <img src="{{ block.settings.image_picker | image_url }}" alt="Slide Image" loading="lazy">
    </div>
    <span>{{ block.settings.slide_text }} </span>
</div>
{% endfor %}
</div>


{% schema %}
{
  "name": "Collection Task",
  "settings": [],  
  "blocks": [
    {
      "type": "image_slide",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_picker",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "slide_text",
          "label": "Slide Text",
          "default": "Your text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "task"
    }
  ]
}
{% endschema %}


